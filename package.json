{
  "name": "@zdavison/noticer",
  "version": "1.2.2",
  "description": "A tool for notifying developers of things they need to know after installing a commit",
  "repository": "https://github.com/zdavison/noticer",
  "license": "MIT",
  "author": "Zachary Davison",
  "type": "module",
  "bin": {
    "noticer": "./dist/bin/noticer.js"
  },
  "files": [
    "dist",
    "!dist/noticer"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:bundle": "bun build src/bin/noticer.ts --compile --outfile dist/noticer",
    "clean": "rm -rf ./dist",
    "lint": "biome check --write src/",
    "test": "bun run build && bun test",
    "watch": "tsc -b -w --preserveWatchOutput",
    "noticer": "bun run build && bun dist/bin/noticer.js",
    "publish-pkg": "bun run build && bun publish --access public",
    "postinstall": "node dist/bin/noticer.js show || exit 0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "fs-extra": "^10.1.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^20.12.12",
    "@types/prompts": "^2.4.9",
    "@biomejs/biome": "^1.5.3",
    "typescript": "5.2.2"
  }
}
